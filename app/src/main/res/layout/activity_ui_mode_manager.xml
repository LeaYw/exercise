<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_ui_mode_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.lyw.exercise.UiModeManagerActivity">

    <Button
            android:onClick="onClick"
            android:text="car mode yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:id="@+id/car_mode_yes"/>

    <Button
            android:onClick="onClick"
            android:text="night_mode_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="147dp"
            android:id="@+id/night_mode_no"
            android:layout_below="@+id/car_mode_yes"
            android:layout_alignEnd="@+id/night_mode_yes"/>

    <Button
            android:onClick="onClick"
            android:text="night mode yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/night_mode_yes"
            android:layout_alignBottom="@+id/night_mode_no"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"/>

    <Button
            android:onClick="onClick"
            android:text="car mode no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/car_mode_no"
            android:layout_below="@+id/car_mode_yes"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
